<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarlienhe"
        app:title="Liên hệ"
        android:background="#FF5722"
        app:titleTextColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout

        android:orientation="vertical"
        android:background="@drawable/bando"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Liên hệ thông qua"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:background="@drawable/boder"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/diachi"
                android:scaleType="fitXY"
                android:layout_marginLeft="5dp"
                android:layout_width="90dp"
                android:layout_height="90dp"/>
            <TextView
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_margin="30dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="Phạm Xá 1, xã Tuấn Việt, Kim Thành, Hải Dương"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/boder"
            android:orientation="horizontal"
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/dienaaa"
                android:scaleType="fitXY"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <TextView
                android:gravity="center"
                android:layout_margin="30dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text=" 0961731396"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/boder"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="10dp"
                android:background="@drawable/email"
                android:scaleType="fitXY"
                android:layout_width="90dp"
                android:layout_height="90dp"/>
            <TextView
                android:gravity="center"
                android:layout_margin="30dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="Email : nguyendinhvan17121999@gmail.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
