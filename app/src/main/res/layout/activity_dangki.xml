<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:background="@drawable/bong"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.DangkiActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarmanhinhchinh"
        app:title="Đăng ký tài khoản"
        app:titleTextColor="@color/white"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <EditText
            android:layout_marginRight="30dp"

            android:padding="10dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_user"
            android:background="@drawable/cst_edittext"
            android:id="@+id/edittexttentaikhoan"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"

            android:hint="Nhập tên"

            android:layout_width="match_parent"

            android:layout_height="wrap_content" />
        <EditText
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_phone"
            android:background="@drawable/cst_edittext"
            android:id="@+id/edittextdangkitaikhoan"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"

            android:hint="Nhập tài khoản"

            android:layout_width="match_parent"

            android:layout_height="wrap_content" />


        <EditText
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_lock"
            android:background="@drawable/cst_edittext"
            android:id="@+id/edittextdangkimatkhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"

            android:hint="Nhập mật khẩu"
            android:inputType="number|numberPassword"

            android:textSize="20sp" />

        <EditText
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:enabled="false"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_date"
            android:background="@drawable/cst_edittext"
            android:id="@+id/edittextngaysinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"

            android:hint="Chọn ngày sinh"


            android:textSize="20sp" />

        <EditText
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_location"
            android:background="@drawable/cst_edittext"
            android:id="@+id/edittextdiachi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"

            android:hint="Nhập địa chỉ"
            android:inputType="number|numberPassword"

            android:textSize="20sp" />

        <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_weight="1"
                android:id="@+id/buttonxacnhan"
                android:textSize="20sp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="30dp"
                android:padding="10dp"
                android:backgroundTint="#E91E63"
                android:text="Xác nhận"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_weight="1"
                android:id="@+id/buttonhuy"
                android:textSize="20sp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:backgroundTint="#0A0317"
                android:text="hủy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>